<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:src="@drawable/sample_book"
            android:layout_width="40dp"
            android:layout_height="60dp"/>

        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/newfont"
            android:layout_toEndOf="@+id/img"
            android:id="@+id/title"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="System Programming And Operating System "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:fontFamily="@font/newfont"
            android:layout_toEndOf="@id/img"
            android:layout_below="@+id/title"
            android:id="@+id/publication"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Tech-neo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/newfont"
            android:layout_toEndOf="@id/img"
            android:layout_below="@+id/publication"
            android:id="@+id/price"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="â‚¹ 334"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/top"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:background="@color/lightwhite" />
</RelativeLayout>